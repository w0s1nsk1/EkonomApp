<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="EkonomApp.Views.CreatorPage">
    <ContentPage NavigationPage.HasNavigationBar="false">
        <StackLayout>
            <Image Scale="0.6" Source="Resources/icon.png" />
            <Label FontSize="Large" Text='Witaj w aplikacji Mój Ekonom!' VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
            <Label FontSize="Small" Text='Aby kontynuować kliknij przycisk "Dalej"' VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
            <Button TextColor="White" Text="Dalej" BackgroundColor="#0d8aee" Clicked="NextPage1_Clicked" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage>
    <ContentPage NavigationPage.HasNavigationBar="false">
        <StackLayout>
            <Image Scale="0.6" Source="Resources/icon.png"/>
            <Label FontSize="Large" Text='W jakiej klasie jesteś?' VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
            <Label FontSize="Small" Text='Klasa:' VerticalOptions="CenterAndExpand" HorizontalOptions="Start"/>
            <Picker x:Name="Classes" Title="Wybierz swoją klasę" VerticalOptions="End"/>
            <Button TextColor="White" Text="Rozpocznij" BackgroundColor="#0d8aee" Clicked="Next_Clicked" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage>

</TabbedPage>